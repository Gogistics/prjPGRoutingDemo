extends base

block css_block
  // required css files
  link(href='/public/css/leaflet-0.7.css' type='text/css' rel='stylesheet')
  link(href='/public/css/index.min.css' type='text/css' rel='stylesheet')

block content
  div(ng-controller="indexCtrl as ctrl" ng-init="ctrl.init()")
    div(class="container text-center")
      h3(class="text-center") #{title}
      br
      div(class="col-lg-4 col-sm-12")
        div(class = "input-group")
          span(class = "input-group-addon") Origin
          input(id="sourceLatLng" type = "text" class = "form-control" placeholder = "33.3452, -122.0198" disabled)
      div(class="col-lg-4 col-sm-12")
        div(class = "input-group")
          span(class = "input-group-addon") Destination
          input(id="targetLatLng" type = "text" class = "form-control" placeholder = "33.3452, -122.0198" disabled)
      div(class="col-lg-4 col-sm-12")
        div(class = "input-group")
          input(type="button" class="btn btn-default" value="Submit" ng-click="ctrl.submitGeoQuery()")
      hr
      div(id="demo" class="col-lg-12")
      br
      div(id="map" class="col-lg-12")

block js_block
  // for IE 11 or browser is not IE
  script(type="text/javascript" src="/public/js/d3.v3.min.js")
  script(type="text/javascript" src="/public/js/leaflet-0.7.js")
  script(type="text/javascript" src="/public/js/index.min.js")

