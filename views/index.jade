extends base

block css_block
  // required css files
  link(href='/public/css/leaflet-0.7.css' type='text/css' rel='stylesheet')
  link(href='/public/css/mapbox-1.6.4.css' type='text/css' rel='stylesheet')
  link(href='/public/css/index.min.css' type='text/css' rel='stylesheet')

block content
  div(ng-controller="indexCtrl as ctrl" ng-init="ctrl.init()")
    div(class="container text-center")
      h3(class="text-center") #{title}
      hr
      div(id="demo" class="col-lg-12")
      br
      div(id="map" class="col-lg-12")

block js_block
  // for IE 11 or browser is not IE
  script(type="text/javascript" src="/public/js/d3.v3.min.js")
  script(type="text/javascript" src="/public/js/leaflet-0.7.js")
  script(type="text/javascript" src="/public/js/mapbox-1.6.4.js")
  script(type="text/javascript" src="/public/js/index.min.js")

